<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/bg_item_main_exam">

    <ImageView
        android:id="@id/main_exam_logo"
        android:src="@mipmap/ic_launcher"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_gravity="center"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <TextView
        android:id="@id/main_exam_name"
        android:layout_toEndOf="@id/main_exam_logo"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:text="数学"
        android:textSize="16sp"
        android:textColor="@color/black_overlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@id/main_exam_arrow"
        android:src="@mipmap/arrow_right"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_centerVertical="true"
        android:layout_width="15dp"
        android:layout_height="15dp"/>

    <TextView
        android:id="@id/main_exam_score"
        android:layout_toStartOf="@id/main_exam_arrow"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:text="80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>